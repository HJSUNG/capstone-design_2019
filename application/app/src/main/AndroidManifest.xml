<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csecau.capstone.capstone02">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@drawable/diary_icon"
        android:label="Diabetes Tracker"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".RegistrationActivity"></activity>
        <activity android:name=".GlucoseActivity"></activity>
        <activity android:name=".DiaryActivity"></activity>
        <activity android:name=".NewdiaryActivity"></activity>
        <activity android:name=".MedicationActivity"></activity>
        <activity android:name=".MealActivity"></activity>
        <activity android:name=".ExerciseActivity"></activity>
    </application>

</manifest>