<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/button_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/GlucoseButton"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="혈당" />

            <Button
                android:id="@+id/MedicationButton"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="약" />

            <Button
                android:id="@+id/ExerciseButton"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="운동" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_first">

            <Button
                android:id="@+id/MealButton"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="식단" />

            <Button
                android:id="@+id/DiaryButton"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="일기장" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="로그아웃"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/medicationtext"
            android:orientation="horizontal"
            android:layout_below="@+id/button_second">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medication information here"
                android:gravity="center_horizontal"
                android:textSize="40sp"
                android:textColor="@android:color/holo_blue_bright"/>
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chart"
            android:layout_below="@id/medicationtext"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>