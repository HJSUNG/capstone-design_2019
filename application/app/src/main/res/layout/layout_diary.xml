<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="70dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/dairy_image_layout"
    android:layout_alignParentLeft="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dairy_image_view"
        android:src="@drawable/image_good"/>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dairy_text_layout"
    android:layout_toRightOf="@id/dairy_image_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dairy_text_content"
        android:layout_weight="2"
        android:textSize="20sp"
        android:text="Content of dairy"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dairy_text_time"
        android:layout_weight="1"
        android:text="Time of dairy"/>
</LinearLayout>

</RelativeLayout>
