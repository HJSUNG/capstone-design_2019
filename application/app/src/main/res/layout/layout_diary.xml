<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="70dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/dairy_text_analysis_score_layout"
    android:layout_alignParentLeft="true"
    android:weightSum="0.1"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dairy_text_analysis_score"
        android:textSize="30sp"
        android:text="0"/>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dairy_text_layout"
    android:layout_toRightOf="@id/dairy_text_analysis_score_layout"
    android:weightSum="0.9">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dairy_text_content"
        android:layout_weight="2"
        android:textSize="20sp"
        android:text="Content of dairy"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dairy_text_time"
        android:layout_weight="1"
        android:text="Time of dairy"/>
</LinearLayout>

</RelativeLayout>
